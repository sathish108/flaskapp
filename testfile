pipeline {
    agent any
    stages {
        stage ('pulling code from git hub') {
            steps {
                git branch: 'main', credentialsId: 'github_credentials', url: 'https://github.com/sathish108/flaskapp'    
		        stash 'Source'
            }    
        }
        stage ('second stage') {
            steps {
                echo "build image"
                sh "docker build -t flaskapp:v1 ." 
            }           
        }
    }
}